<h2>Top <%=item%></h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Average</th>
    </tr>
  </thead>

  <tbody>
  <% items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.average_rating %></td>
    </tr>
  <% end %>
  </tbody>
</table>
